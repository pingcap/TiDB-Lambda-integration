  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node": "^18.11.15",
    "esbuild": "^0.16.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.234.0",
    "@faker-js/faker": "^7.6.0",
    "@fastify/aws-lambda": "^3.1.3",
    "fastify": "^4.10.2",
