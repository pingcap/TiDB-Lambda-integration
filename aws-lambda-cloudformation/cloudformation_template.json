        "InternetGatewayId": { "Ref": "BookstoreInternetGateway" }
      }
    },
    "getBookFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Handler": "index.getBookHandler",
        "Role": {
